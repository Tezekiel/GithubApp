<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RepositoryDetailsActivity">

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:weightSum="8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarIv"
            app:layout_constraintWidth_percent="0.5">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Name: " />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Description: " />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Created at: " />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Updated at: " />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Pushed at: " />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Language: " />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Score: " />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:weightSum="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarIv"
            app:layout_constraintWidth_percent="0.5">

        <TextView
                android:id="@+id/repNameTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/createdTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/updatedTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/pushedTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/languageTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/scoreTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:onClick="openWeb"
            android:text="Open web"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openUser"
            android:text="Open user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>